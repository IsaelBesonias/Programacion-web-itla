@page "/Tabla_multiplicar"
@rendermode InteractiveServer

<PageTitle>TablaMultiplicar</PageTitle>

<center>
<h1>Tabla de multiplicar sencilla.</h1>

<p>Es una tabla de multiplicar que presenta las multiplicaciones del número que digites hasta el 15 (número X 1, 2, 3, etc).</p>

<div>
    <label>Número:</label>
    <input type="textbox" @bind="numero" class="form-control"/>
</div>

@if(numero > 0){

    for(int i = 1; i <= 15; i++){

        <div>@numero X @i = @(numero * i)</div>
    }
}

@code{

    int numero = 0;
}

</center>